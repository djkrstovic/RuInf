<%- include ('../partials/header'); -%>
<br>
<div class="row" style="padding: 20px;">
    <form method="post" class="col s12">
        <h3>DODAJ PREDMET:</h3>
        <br>

        <div class="message"><%= message %><br><br></div>

        <div class="form-group row">
            <label for="NP_NAZIV_PREDMETA" class="col-2 col-form-label">Naziv predmeta</label>
            <div class="col-10">
                <input type="text" name="NP_NAZIV_PREDMETA" class="form-control" >
            </div>
        </div>

        <div class="form-group row">
            <label for="NP_PREDMET" class="col-2 col-form-label">Akronim predmeta</label>
            <div class="col-10">
                <input type="text" name="NP_PREDMET" class="form-control" maxlength="6">
            </div>
        </div>

        <div class="form-group row">
            <label for="NP_VERZIJA" class="col-2 col-form-label">Verzija predmeta</label>
            <div class="col-10">
                <input type="number" name="NP_VERZIJA" class="form-control" min="1" max="99" step="1" value="1">
            </div>
        </div>

        <div class="form-group row">
            <label for="NP_IZBORNA" class="col-2 col-form-label">Izborni</label>
            <div class="col-10">
                <select class="form-control" name="NP_IZBORNA">
                    <option value="1">Da</option>
                    <option value="0">Ne</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="broj_casova" class="col-2 col-form-label">Broj casova</label>
            <div class="col-10">
                <input type="number" name="broj_casova" class="form-control" required pattern="^[0-9]{1,3}(\.[0-9]{0,2})?$"
                title="Unos mora biti broj." step="0.01">
            </div>
        </div>

        <div class="form-group row">
            <label for="FOND_NACIN_IZVO_ENJA" class="col-2 col-form-label">Način izvođenja nastave</label>
            <div class="col-10">
                <select class="form-control" name="FOND_NACIN_IZVO_ENJA">
                    <option value="1/G">Grupna</option>
                    <option value="2/K">Kolektivna</option>
                    <option value="3/P">Pojedinačna</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="USTANOVA" class="col-2 col-form-label">Ustanova</label>
            <div class="col-10">
                <select class="form-control" name="USTANOVA">
                    <% ustanove.forEach(function(ustanova, index) { %>
                    <option value="<%= ustanova.key %>">
                        <%= ustanova.value %>
                    </option>
                    <% }); %>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label">&nbsp;</label>
            <div class="col-10">
                <input type="submit" name="submit" value="Dodaj" class="btn btn-primary btn-lg">
            </div>
        </div>
    </form>
</div>
<%- include ('../partials/footer'); -%>

<%- include ('../partials/header'); -%>
<br>
<div class="row" style="padding: 20px;">
    <form method="post" class="col s12">
        <h3>DODAJ KOMPETENCIJU:</h3>
        <br>
        <div class="form-group row">
            <label for="KO_KOMPETENCIJA" class="col-2 col-form-label">ID kompetencije</label>
            <div class="col-10">
                <input type="text" name="KO_KOMPETENCIJA" class="form-control" required pattern="^[A-z0-9]{2}$"
                title="ID mora da sadrzi tacno dva slova ili cifre koje su jedinstvene.">
            </div>
        </div>
        <div class="form-group row">
            <label for="KO_NAZIV" class="col-2 col-form-label">Naziv</label>
            <div class="col-10">
                <input type="text" name="KO_NAZIV" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="KO_OPIS" class="col-2 col-form-label">Opis</label>
            <div class="col-10">
                <input type="text" name="KO_OPIS" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">&nbsp;</label>
            <div class="col-10">
                <input type="submit" name="submit" value="Dodaj" class="btn btn-primary btn-lg">
            </div>
        </div>
    </form>
</div>
<%- include ('../partials/footer'); -%>

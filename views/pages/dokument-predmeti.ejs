<%- include ('../partials/header'); -%>
<div class="">
    <h1 class="h5">Liste dokumenata iz MongoDB za predmete</h1>
    <br>
    <div class="col s12">
        <% if (predmeti.length > 0) { %>
            <% predmeti.forEach(function(predmet, index) { %>
                <div class="card"><br>
                    <div class="card-body">
                        <div class="card-title">
                            <button class="btn btn-warning btn-sm float-right" type="button" data-toggle="collapse" data-target="#collapseExample-<%= predmet._id %>"
                                aria-expanded="false" aria-controls="collapseExample">
                                Prika≈æi dokument
                            </button>
                            <strong><%= predmet.createdAt.toISOString().substr(0, 19).replace('T', ' ') %> #<%= predmet._id %></strong>
                        </div>
                        <div class="collapse" id="collapseExample-<%= predmet._id %>">
                            <div class="card card-body">
                                <pre id="json"><%= JSON.stringify(predmet, null, 4) %></pre>
                            </div>
                        </div>
                    </div>
                </div><br>
            <% }); %>
        <% } %>
    </div>
</div>

<script>
    function expandJSON(id) {
        document.getElementById(id).classList.remove('d-none');
    }
</script>
<%- include ('../partials/footer'); -%>
